<title>Profile |<%= full_title(yield(:title)) %></title>

<h1>My Marbles</h1>
<strong><%= link_to "Edit My Account",edit_user_registration_path %><strong>
<br><br>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th> Marble Name</th>
      <th> Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @marble.each do |marble| %>
      <tr>
        <div class="field"> 
          <td rowspan="2"><%= image_tag marble.avatar.url(:thumb) %></td>
      </tr>
      <tr>
          <td><%= marble.marble_name %></td> 
          <td><%= marble.marble_text %></td>
          <td><strong><%= link_to 'Edit Marble', edit_marble_path(marble) %><strong></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add New Marble ', new_marble_path %>

    
