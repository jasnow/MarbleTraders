<h1>Marble Trading Floor</h1>
<strong><%= link_to 'Add Your Marble Here', new_marble_path %><strong>

<table class='table'>
  <thead> 
    <script language="javascript"> 
      function toggle() {
      var ele = document.getElementById("toggleText");
      var text = document.getElementById("displayText");
      if(ele.style.display == "block") {
        ele.style.display = "none";
        text.innerHTML = "Show Comments";
        }
      else {
        ele.style.display = "block";
        text.innerHTML = "Hide Comments";
        }
      } 
    </script>
  </thead>
<br><br>
  <tbody>
    <% @descend_marble.each do |marble| %>
      <tr>
        <div class="field"> 

          <td rowspan="2"><%= image_tag marble.avatar.url(:thumb) %></td>
          <td><%= link_to marble.user.user_name, othersmarbles_path(:id => marble.user.id) %></td>
          <td><%= marble.marble_text %></td>

      </tr>
      <tr>
          <td><%= marble.marble_name %></td> 
          <td><%= marble.id %></td>
          <td><h6><%= link_to 'Add Comment', new_comment_path %></h6></td>
          <td><h6><%= link_to 'See Comments', comments_path %></h6></td>
          <td><h6>Added:&nbsp; &nbsp;<%= time_ago_in_words(marble.created_at) %>&nbsp; &nbsp;ago</h6></td>
      </tr>
    <% end %>
  </tbody>
</table>

