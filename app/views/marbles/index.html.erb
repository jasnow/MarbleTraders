<h1>Marble Trading Floor</h1>
<strong><%= link_to 'Add Your Marble Here', new_marble_path %><strong>

<table class='table'>
  <thead> 
  </thead>
<br><br>
  <tbody>
    <% @marble.each do |marble| %>
      <tr>
        <div class="field"> 
          <td rowspan="2"><%= image_tag marble.avatar.url(:thumb) %></td>
          <td><u><%= link_to marble.user.user_name, marbleuser_path %></u></td>
          <td><%= marble.marble_text %></td>    
      </tr>
      <tr>
          <td><%= marble.marble_name %></td>
          <td><u><%= link_to 'Comments', marblecomments_path%></u></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



